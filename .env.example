# Deep Research Agent Environment Configuration
# Copy this file to .env and configure your settings

# Debug Settings
DEBUG=false
LOG_LEVEL=INFO

# Ollama Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_CHAT_MODEL=llama3.2
OLLAMA_REASONING_MODEL=llama3.2:8b

# Vector Database Configuration
VECTOR_DB_PATH=./data/vector_db
CHROMA_COLLECTION_NAME=research_documents

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_DEBUG=false

# File Processing Configuration
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=pdf,txt,docx,md
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Agent Configuration
MAX_ITERATIONS=10
REASONING_DEPTH=3
QUERY_DECOMPOSITION_LIMIT=5

# Export Configuration
EXPORT_FORMAT=pdf,markdown
PDF_PAGE_SIZE=A4
INCLUDE_CITATIONS=true